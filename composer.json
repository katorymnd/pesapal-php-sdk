{
  "name": "katorymnd/pesapal-php-sdk",
  "description": "A PHP SDK for Pesapal API integration, enabling seamless payment handling in PHP applications.",
  "type": "library",
  "version": "2.2.0",
  "keywords": [
    "pesapal",
    "payment",
    "sdk",
    "php",
    "api",
    "integration"
  ],
  "homepage": "https://katorymnd.com/pesapal-php-sdk",
  "require": {
    "php": ">=8.0.0",
    "guzzlehttp/guzzle": "^7.9",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.7",
    "filp/whoops": "^2.16",
    "giggsey/libphonenumber-for-php": "^8.13"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.4",
    "friendsofphp/php-cs-fixer": "^3.64",
    "mockery/mockery": "^1.6"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Katorymnd\\PesapalPhpSdk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Katorymnd\\PesapalPhpSdk\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Kato Raymond",
      "email": "katorymnd@gmail.com"
    }
  ],
  "minimum-stability": "stable"
}
